doctype html
html(lang="en")
	head
		title Daftar Buku #{ucfirst(collection)}
		link(rel='stylesheet', href='../../css/bootstrap.min.css')
		style .btn {margin:10px 10px 10px 0px;}
	body
		#container
			- var obj = objects
			div.col-md-8.col-md-offset-2
				div.panel.panel-default
					div.panel-heading
						Ubah Data Buku
					div.panel-body
						form(method='post', action='')
							div.form-group
								label(for='kd_buku') kd_buku
								input(type='text', name='kd_buku', id='kd_buku', value='#{obj.kd_buku}').form-control
							div.form-group
								label(for='judul') judul
								input(type='text', name='judul', id='judul', value='#{obj.judul}').form-control
							div.form-group
								input(type='submit', value='Ubah').btn.btn-warning
								a(href='/#{collection}', role='button').btn.btn-danger Batal